{
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:shopify\" \"npm run watch:css\"",
    "production": "concurrently \"npm run dev:shopify:production\" \"npm run watch:css\"",
    "build": "npm run build:css",
    "dev:shopify": "shopify theme dev --environment=production",
    "watch:css": "npx tailwindcss -i tailwindcss/tailwind-input.css -o assets/tailwind-output.css -w",
    "build:css": "npx tailwindcss -i tailwindcss/tailwind-input.css -o assets/tailwind-output.css --minify",
    "check:liquid": "shopify theme check --config .liquid-check.yml --fail-level suggestion",
    "check:theme": "shopify theme check --config .theme-check.yml --fail-level error",
    "check:formatting": "prettier $(git diff --name-only HEAD origin/staging) --check --config .prettierrc --plugin @shopify/prettier-plugin-liquid  --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --no-warn-ignored",
    "lint:summary": "SORT_BY=errors DESC=true eslint -f summary .",
    "lint:modified": "eslint $(git diff --name-only HEAD origin/staging | grep -E '.(js)$' | xargs) --no-warn-ignored"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/preset-env": "^7.24.0",
    "@eslint/eslintrc": "^3.0.1",
    "@shopify/cli": "^3.59.0",
    "@shopify/prettier-plugin-liquid": "^1.4.4",
    "@shopify/theme": "^3.58.2",
    "@testing-library/dom": "^9.3.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-summary": "^1.1.0",
    "eslint-plugin-import": "^2.25.2",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fail-on-console": "^3.2.0",
    "make-coverage-badge": "^1.2.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.0"
  }
}
